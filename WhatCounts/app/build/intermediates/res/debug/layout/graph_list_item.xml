<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_date"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textSize="17sp"
        android:textStyle="bold"
        android:rotation="90"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">        
    </TextView>
    
    <LinearLayout
        android:id="@+id/rowLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/data_fat"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
	        <ImageView
		        android:id="@+id/bar_fat"
		        android:background="@android:color/holo_blue_dark"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/bar_height"
	            android:contentDescription="@string/bar_desc"
		        />
	        <TextView 
                android:id="@+id/num_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:paddingLeft="@dimen/bar_height"
	            />
        </LinearLayout>

        <LinearLayout android:id="@+id/data_carb"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
	        <ImageView
	            android:id="@+id/bar_carb"
	            android:background="@android:color/holo_orange_dark"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/bar_height"
	            android:contentDescription="@string/bar_desc"
	            />
            <TextView 
                android:id="@+id/num_carb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:paddingLeft="@dimen/bar_height"
                />
        </LinearLayout>

        <LinearLayout android:id="@+id/data_sweat"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
	        <ImageView
	            android:id="@+id/bar_sweat"
	            android:background="@android:color/holo_red_dark"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/bar_height"
	            android:contentDescription="@string/bar_desc"
	            />
            <TextView 
                android:id="@+id/num_sweat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:paddingLeft="@dimen/bar_height"
                />
        </LinearLayout>
        
        <LinearLayout android:id="@+id/data_coin"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
	        <ImageView
	            android:id="@+id/bar_coin"
	            android:background="@android:color/holo_green_dark"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/bar_height"
	            android:contentDescription="@string/bar_desc"
	            />
            <TextView 
                android:id="@+id/num_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:paddingLeft="@dimen/bar_height"
                />
        </LinearLayout>
    </LinearLayout>    
</LinearLayout><!-- From: file:/Users/mcroghan/Studio/personal/WhatCounts/app/src/main/res/layout/graph_list_item.xml -->